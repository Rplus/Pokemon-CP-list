<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    title üëÅ Pok√©mons CP list
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="style.css")
    meta(property="og:image" content="https://i.imgur.com/tDO1Ggv.png")

    link(rel="manifest" href="manifest.json")
    link(rel="icon" sizes="144x144" href="img/type_Legendary.png")

    meta(name="mobile-web-app-capable" content="yes")
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(name="application-name" content="üëÅ Pok√©mons CP list")
    meta(name="apple-mobile-web-app-title" content="üëÅ Pok√©mons CP list")

body


  - var sortTypes = ['id', 'cp', 'atk', 'def', 'sta', 'tank'];
  - var initLv = 30;

  .workspace
    h1 Pok√©mons CP list

    input(type="checkbox" class="sr-only" id="show-ads")
    input(type="checkbox" class="sr-only" checked id="show-types")

    a#go-to-top(href="#") go to top

    each type in sortTypes
      input(type="radio" class="sr-only" name="sort-by" id=`sort-by-${type}-‚ñ≤` value="‚ñ≤")
      input(type="radio" class="sr-only" name="sort-by" id=`sort-by-${type}-‚ñº` value="‚ñº")
    .pmCtrlBox
      table
        col(width="35%")
        col(width="15%")
        col
        tr
          td
            label(for="pmLv") PM Level:
          td
            input#pmLv(type="number" min="1" max="40" step="0.5"
              value=initLv
              data-update="lv"
              data-sync="pmLv--range")
          td
            input#pmLv--range(type="range" min="1" max="40" step="0.5"
              value=initLv
              data-update="lv"
              data-sync="pmLv")

        -
          var ivTypes = [
            { type: 'atk', title: 'attack' },
            { type: 'def', title: 'defense' },
            { type: 'sta', title: 'stamina' }
          ];

        each i in ivTypes
          tr
            td
              label(for=`iv-${i.type}`)= `${i.title}:`
            td
              input(type="number" min="0" max="15" value="15"
                id=`iv-${i.type}`
                data-update="iv"
                data-type=i.type
                data-sync=`iv-${i.type}--range`)
            td
              input(type="range" min="0" max="15" value="15"
                id=`iv-${i.type}--range`
                data-update="iv"
                data-type=i.type
                data-sync=`iv-${i.type}`)

        tr
          td IV
          td.pmIV
          td.pmCost(title="cost to Lv40")
      .pmSortBox
        each type in sortTypes
          .pmSortGroup
            label(class="pmSort" for=`sort-by-${type}-‚ñ≤` data-anti-dir="‚ñ≤")= type
            label(class="pmSort" for=`sort-by-${type}-‚ñº` data-anti-dir="‚ñº")= type
      .pmFilter
    style.pmCustomStyle
    ul.pmList

    footer.footer
      label(class="ctrl-info" for="show-ads") show ADS
      label(class="ctrl-info" for="show-types") show types

  script(src="script.js")

  template.pmFilter__header--temp
    .pmFilter__header
      button(data-hook="js" data-type="none") none
      | filter by types
      button(data-hook="js" data-type="all") all
  template.pokedexRange--temp
    .pokedexRange
      h3.pokedexRange__header filter by pokedex
      label(for="pokedexRange1" style="--value: var(--pokedex-range1)")
        input(id="pokedexRange1" data-pokedex-range="1" type="range" min="1")
      label(for="pokedexRange2" style="--value: var(--pokedex-range2)")
        input(id="pokedexRange2" data-pokedex-range="2" type="range" min="1")
      style
